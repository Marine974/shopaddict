/*corps de la page*/
body
{
margin: 0px;
padding: 0px;
font-family: calibri;
font-size: 120%;
width: 100%;
height: 100%;
}

#bloc_page
{
width: 100%;
height: 100%;
margin: 0px;
padding: 0px;
position: absolute;
}

/*header*/
#header
{
background-color: black;
color: white;
margin: 0px;
padding: 8px;
}

#connecter
{
display: inline-block;
position: absolute;
top: -3px;
right: 100px;
padding-top: 10px;
}

#connecter a
{
color: white;
text-decoration: none;
}

#connecter a:hover
{
color: white;
text-decoration: underline;
}

#deconnecter
{
display: inline-block;
position: absolute;
top : 0px;
right: 100px;
padding-top: 10px;
}

#deconnecter a
{
color: white;
text-decoration: none;
}

#deconnecter a:hover
{
color: white;
text-decoration: underline;
}

#menu
{
display: inline-block;
position: absolute;
top: 0px;
right: 10px;
padding-top: 10px;
}

.menu_deroulant
{
display: none;
margin-right: -10px;
padding-left: 5px;
width: 250px;
background-color: rgba(0,0,0,0.85);
z-index: 2;
}

.menu_deroulant ul
{
padding: 0px;
margin-left: 5px;
list-style-type: none;
}

.menu_deroulant a
{
	color: white;
	text-decoration: none;
}

.menu_deroulant a:hover
{
	color: #009cff;
}

.menu_deroulant li
{
line-height: 40px;
}

#menu:hover .menu_deroulant
{
display: block;
position: absolute;
right: 0px;
}

/*contenu page d'accueil*/
.presentation
{
background-image: url("pres12.jpg");
width: 100%;
height: 530px;
}

.text_pres
